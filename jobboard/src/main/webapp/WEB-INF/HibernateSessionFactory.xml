				<!-- <value>com.advanceweb.afc.data.entities.FacilityJobTmp</value> -->
				<value>com.advanceweb.afc.data.entities.JpAddon</value>
				<value>com.advanceweb.afc.data.entities.JpJob</value>
				<value>com.advanceweb.afc.data.entities.JpJobAddon</value>
				<value>com.advanceweb.afc.data.entities.JpJobAddonPK</value>
				<value>com.advanceweb.afc.data.entities.JpJobLocation</value>
				<value>com.advanceweb.afc.data.entities.JpJobLocationPK</value>
				<!-- <value>com.advanceweb.afc.data.entities.JpJobLocationBckup</value> -->
				<value>com.advanceweb.afc.data.entities.JpJobTemp</value>
				<value>com.advanceweb.afc.data.entities.JpJobType</value>
				<value>com.advanceweb.afc.data.entities.JpLocation</value>
				<!-- <value>com.advanceweb.afc.data.entities.JpLocationBckup</value> -->
