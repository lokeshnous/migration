<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
		</layout>	
    </appender>
    
	<appender name="STDERR"  class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"  value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN"/>
			<param name="LevelMax" value="FATAL"/>
        </filter>
	</appender>
	
 	<appender name="FILE"  class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/tomcat/logs/jobboard.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"  value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG"/>
			<param name="LevelMax" value="FATAL"/>
        </filter>
	</appender>
	
	
	<appender name="HQL"  class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/tomcat/logs/hibernate.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"  value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n%n%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN"/>
			<param name="LevelMax" value="FATAL"/>
        </filter>
	</appender>

	<!-- SMTP Appender -->
    
    <logger name="com.advanceweb.afc.jb">
    	<level value="DEBUG"/>
    	<appender-ref ref="FILE" />
    </logger>
	
    <logger name="org.hibernate.SQL">
    	<level value="ERROR"/>
    	<appender-ref ref="HQL" />
    </logger>
    
    <logger name="org.apache">
    	<level value="ERROR"/>
    	<appender-ref ref="FILE" />
    </logger>
	<category name="com.advanceweb.afc.jb">
		<priority value="TRACE" />
	</category>
	
	<root>
		<priority value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="STDERR" />
		<appender-ref ref="HQL" />
		<!-- <appender-ref ref="FILE" /> -->
	</root>

</log4j:configuration>
